<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/activity.main.input.resource_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity.main.button.apply"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/activity.main.input.sync_time"
        android:layout_toStartOf="@+id/activity.main.input.sync_time"
        android:hint="@string/activity.main.input.resource_path.hint" />

    <TextView
        android:id="@+id/activity.main.label.resource_path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity.main.input.resource_path"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:labelFor="@id/activity.main.input.resource_path"
        android:text="@string/activity.main.label.resource_path"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/activity.main.input.sync_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity.main.input.resource_path"
        android:layout_alignLeft="@+id/activity.main.label.sync_time"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/activity.main.label.sync_time"
        android:layout_alignTop="@+id/activity.main.input.resource_path"
        android:ems="10"
        android:hint="@string/activity.main.input.sync_time.hint"
        android:inputType="number"
        android:text="@string/activity.main.input.sync_time.default" />

    <TextView
        android:id="@+id/activity.main.label.sync_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity.main.input.sync_time"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/activity.main.button.show_file"
        android:layout_toRightOf="@+id/activity.main.button.show_file"
        android:labelFor="@id/activity.main.input.sync_time"
        android:text="@string/activity.main.label.sync_time"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/activity.main.button.apply"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="@string/activity.main.button.apply"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/activity.main.styling.delimiter.local_network"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_above="@+id/activity.main.label.resource_path"
        android:layout_alignEnd="@+id/activity.main.label.sync_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/activity.main.label.sync_time"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/activity.main.button.show_file"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/activity.main.checkbox.open_if_can"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:enabled="false"
        android:text="@string/activity.main.button.show_file"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/activity.main.checkbox.open_if_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity.main.styling.delimiter.local_network"
        android:layout_alignLeft="@+id/activity.main.button.show_file"
        android:layout_alignStart="@+id/activity.main.button.show_file"
        android:checked="true"
        android:text="@string/activity.main.checkbox.open_if_can" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity.main.button.show_file"
        android:layout_alignEnd="@+id/activity.main.styling.delimiter.local_network"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/activity.main.styling.delimiter.local_network">

        <TextView
            android:id="@+id/activity.main.label.file_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textColor="@android:color/black"
            android:textSize="15sp" />
    </ScrollView>

</RelativeLayout>
