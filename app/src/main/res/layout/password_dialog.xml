<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">


    <EditText
        android:id="@+id/password.dialog.input.password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_below="@+id/password.dialog.label.password"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/password.dialog.label.password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/password.dialog.input.password"
        android:text="@string/password.dialog.label.password"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
</RelativeLayout>