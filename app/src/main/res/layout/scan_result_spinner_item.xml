<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scan.result.spinner.item.ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Snitovets"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/scan.result.spinner.item.security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/scan.result.spinner.item.ssid"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:padding="5dp"
        android:text="WPA2"
        android:textSize="20sp"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/scan.result.spinner.item.bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scan.result.spinner.item.ssid"
        android:text="45:45:45:45:45"
        android:visibility="gone" />
</RelativeLayout>